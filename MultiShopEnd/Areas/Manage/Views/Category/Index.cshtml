@{
    ViewData["Title"] = "Index";

}
@model IEnumerable<Category>
<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Categories</h3>
        </div>
    </div>
</div>
<section class="section">
    <div class="card">
        <div class="card-header ">
            <a asp-action="Create">
                <span class="fa-fw select-all fas"></span>
                Add
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped" id="table1">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td><img src="~/assets/img/Category/@item.ImageUrl" height="60" /></td>
                            <td>@(item.IsDeleted ? "Deactive" : "Active") <a asp-action="ChangeStatus"  asp-route-id="@item.Id"><i class="bi bi-arrow-repeat fa-lg text-primary"></i></a> </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill fa-lg text-danger me-2"></i></a>
                                <a asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square text-warning fa-lg me-2"></i></a>
                                <a asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-box-arrow-up-right text-info fa-lg"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

