
@{
    ViewData["Title"] = "Detail";
}
@model CarouselItem
<div class="container">
    <div class="row">
        <div class="col-md-10 col-6 m-auto">
            <img src="~/assets/img/Carousel/@Model.ImageUrl" class="img-fluid d-block m-auto" alt="...">
        </div>
    </div>
    <div class="row">
        <h4>Title</h4>
        <p>@Model.Title</p>
        <h4>Description</h4>
        <p>@Model.Desc</p>
        <h4>Button Text</h4>
        <p>@Model.BtnText</p>
        <h4>Button URL</h4>
        <p>@Model.BtnUrl</p>
        <h4>Status</h4>
        <p>@(Model.IsDeleted ? "Deactive" : "Active") <a asp-action="ChangeStatus" asp-controller="Carousel" asp-route-id="@Model.Id" class="btn btn-warning">Change</a></p>
    </div>
</div>
